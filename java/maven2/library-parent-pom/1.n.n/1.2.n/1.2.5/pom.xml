        <defaultGoal>install</defaultGoal>

    <!--  also compile resources! needed for test -->
        <resources>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
            <resource>
                <directory>src/main/java</directory>
        <!-- ${project.compileSourceRoots} doesn't work here, probably because that is a list or an array,
             and not 1 directory -->
                <includes>
          <!-- add tlds to taglib jar -->
                    <include>*.tld</include>
          <!-- add jsp-tags to taglib jar -->
                    <include>**/*.tagx</include>
                    <include>**/*.tag</include>
                    <include>**/*.usage</include>
          <!-- copy all properties files for inclusion in jar -->
                    <include>**/*.properties</include>
          <!-- add xml files to jar -->
                    <include>**/*.xml</include>
          <!-- add betwixt files to jar -->
                    <include>**/*.betwixt</include>
          <!-- add text files to jar -->
                    <include>**/*.txt</include>
                </includes>
            </resource>
        </resources>

        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>src/test/java</directory>
                <includes>
          <!-- add tlds to taglib jar -->
                    <include>*.tld</include>
          <!-- add jsp-tags to taglib jar -->
                    <include>**/*.tagx</include>
                    <include>**/*.tag</include>
                    <include>**/*.usage</include>
          <!-- copy all properties files for inclusion in jar -->
                    <include>**/*.properties</include>
          <!-- add xml files to jar -->
                    <include>**/*.xml</include>
          <!-- add betwixt files to jar -->
                    <include>**/*.betwixt</include>
          <!-- add text files to jar -->
                    <include>**/*.txt</include>
                </includes>
            </testResource>
        </testResources>

        <!--
            The plugin management section is used to configure plugins, without
            actually enabling them. To specify which plugins should be enabled,
            see the plugins section.
        -->
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${ppwcode.plugin.compiler.version}</version>
                    <configuration>
                        <compilerVersion>${ppwcode.java.version}</compilerVersion>
                        <source>${ppwcode.java.version}</source>
                        <target>${ppwcode.java.version}</target>
                        <encoding>${ppwcode.java.encoding}</encoding>
            <!--
                            These settings should be overridden for production
                            environments, using a profile
                        -->
                        <debug>true</debug>
                        <showDeprecation>true</showDeprecation>
                        <showWarnings>true</showWarnings>
                        <optimize>false</optimize>
                    </configuration>
                </plugin>

                <plugin>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>${ppwcode.plugin.install.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-eclipse-plugin</artifactId>
                    <version>${ppwcode.plugin.eclipse.version}</version>
                    <configuration>
                        <downloadSources>true</downloadSources>
                        <downloadJavadocs>true</downloadJavadocs>
                        <wtpVersion>2.0</wtpVersion>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>${ppwcode.plugin.war.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-site-plugin</artifactId>
                    <version>${ppwcode.plugin.site.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${ppwcode.plugin.surefire.version}</version>
                    <configuration>
            <!--
                            Don't fail the build when a unit test fails.
                            We want the surefire reports!
                        -->
                        <testFailureIgnore>true</testFailureIgnore>
            <!--
                            always because this ensures that every test
                            gets a clean environment to run in
                        -->
                        <forkMode>pertest</forkMode>
            <!--
                            Only classes with Test in their names are
                            considered
                        -->
                        <includes>
                            <include>**/*Test.java</include>
                            <include>**/Test*.java</include>
                        </includes>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>${ppwcode.plugin.release.version}</version>
                    <configuration>
                        <goals>deploy site site-deploy</goals>
                        <preparationGoals>clean install</preparationGoals>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>${ppwcode.plugin.antrun.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${ppwcode.plugin.assembly.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-clean-plugin</artifactId>
                    <version>${ppwcode.plugin.clean.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${ppwcode.plugin.jar.version}</version>
                    <configuration>
                        <archive>
                            <manifestEntries>
                                <Implementation-Title>${pom.artifactId}</Implementation-Title>
                                <Implementation-Version>${pom.version}</Implementation-Version>
                                <Implementation-Vendor-Id>${pom.groupId}</Implementation-Vendor-Id>
                                <Implementation-Vendor>${pom.organization.name}</Implementation-Vendor>
                                <Specification-Title>${pom.artifactId}</Specification-Title>
                                <Specification-Version>${pom.version}</Specification-Version>
                                <Specification-Vendor>${pom.organization.name}</Specification-Vendor>
                            </manifestEntries>
                        </archive>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>test-jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>${ppwcode.plugin.source.version}</version>
                    <executions>
                        <execution>
                            <id>attach-sources</id>
                            <phase>verify</phase>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                        </execution>
                        <execution>
                            <id>attach-test-sources</id>
                            <phase>verify</phase>
                            <goals>
                                <goal>test-jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>${ppwcode.plugin.deploy.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-plugin-plugin</artifactId>
                    <version>${ppwcode.plugin.plugin.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${ppwcode.plugin.resources.version}</version>
                    <configuration>
                        <encoding>${ppwcode.java.encoding}</encoding>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-ejb-plugin</artifactId>
                    <version>${ppwcode.plugin.ejb.version}</version>
                    <configuration>
                        <ejbVersion>${ppwcode.ejb.version}</ejbVersion>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-ear-plugin</artifactId>
                    <version>${ppwcode.plugin.ear.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>cobertura-maven-plugin</artifactId>
                    <version>${ppwcode.plugin.cobertura.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <version>${ppwcode.plugin.enforcer.version}</version>
                </plugin>
                <plugin>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>${ppwcode.plugin.javadoc.version}</version>
                    <executions>
                        <execution>
                            <id>attach-javadocs</id>
                            <goals>
                                <goal>jar</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>com.agilejava.docbkx</groupId>
                    <artifactId>docbkx-maven-plugin</artifactId>
                    <version>${ppwcode.plugin.docbkx.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>generate-html</goal>
                            </goals>
                            <phase>pre-site</phase>
                            <configuration>
              <!-- Copy images so they would be available for the site -->
                                <preProcess>
                                    <copy todir="${site.target.docbooks}/images" failOnError="false">
                                        <fileset dir="src/docbkx/images" />
                                    </copy>
                                </preProcess>
              <!-- Copy the css files for the stylesheet of the docbook pages -->
                                <preProcess>
                                    <copy todir="${site.target.docbooks}/css" failOnError="false">
                                        <fileset dir="src/docbkx/css" />
                                    </copy>
                                </preProcess>
                                <targetDirectory>${site.target.docbooks}</targetDirectory>
                                <htmlhelpEnumerateImages>true</htmlhelpEnumerateImages>
                                <xincludeSupported>true</xincludeSupported>
                            </configuration>
                        </execution>
                    </executions>
                    <dependencies>
                        <dependency>
                            <groupId>net.sf.docbook</groupId>
                            <artifactId>docbook-xml</artifactId>  
                            <version>5.0</version>
                            <scope>runtime</scope>
                            <classifier>xsd-resources</classifier>
                            <type>zip</type>
                        </dependency>
                    </dependencies>
                </plugin>
            </plugins>
        </pluginManagement>

